{
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Launch API",
            "cwd": "${workspaceRoot}/api",
            "envFile": "${workspaceFolder}/.env",
            "runtimeExecutable": "yarn",
            "runtimeArgs": [
                "start"
            ]
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Launch UI Dev",
            "cwd": "${workspaceRoot}/ui",
            "envFile": "${workspaceFolder}/.env",
            "runtimeExecutable": "yarn",
            "runtimeArgs": [
                "serve"
            ]
        }
    ]
}